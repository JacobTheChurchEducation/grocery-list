<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>

    <script src="./shopping_list.js"></script>

    <style>
        body
        {
            width: 100%;
        }
        table
        {
            margin: auto;
        }
        tr, td
        {
            border: 1px solid black;
        }

        .headers
        {
            width: 25%;
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            margin: auto;

        }
        .button-space
        {
            margin: auto;
        }
        .results
        {
            width: 80%;
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            margin: auto;

        }
    </style>

</head>
<body>


<% shoppingItems.forEach(function(element) { %>


    <div class="headers">
        <div class="Date"><h1>Date: <%= element[1]%></h1></div>
        <div class="Price"><h1>Price: <%= element[2]%></h1></div>
    </div>

</div>
<table  pageId='<%= element[0]%>' price="<%= element[2]%>">
    <tr>
        <td>ID</td>
        <td>Item</td>
        <td>Price</td>
        <td>Divider</td>
    </tr>
    <% element[3].forEach(function(item) { %>
          <tr>
              <td>0</td>
              <td> <%= item %></td>
              <td><input class="prices" placeholder="price"></td>
              <td><select class='multipliers' name="divider">
                      <option value="normal">1/3 to 2/3</option>
                      <option value="fiftyfifty">50/50</option>
                      <option value="jacob">Jacob</option>
                      <option value="Emi">Emi</option>
                  </select></td>
          </tr>

    <% })%>
</table>
<% }) %>


<!--<script src="../shopping_list.js"></script>-->
<div class="button-space">
    <button onclick="calc()" class="button">Calculate</button>
</div>

<div class="results">
    <h1 class="jac">Jac:  <%= jacobEndResult %></h1>
    <h1 class="emi">Emi:  <%= emisEndResult %></h1>
</div>

</body>
</html>